<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="aslan">
        <createTable tableName="posts">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="time" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="time_changed" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="author_id" type="UUID"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="post_text" type="TEXT"/>
            <column name="is_blocked" type="BOOLEAN"/>
            <column name="is_deleted" type="BOOLEAN"/>
            <column name="comments_count" type="BIGINT"/>
            <column name="tags" type="TEXT"/>
            <column name="like_amount" type="BIGINT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>